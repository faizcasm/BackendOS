# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/backendos?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload - S3 Compatible Storage
MAX_FILE_SIZE=10485760
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=backendos-files
S3_REGION=us-east-1

# AI Configuration (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Monitoring
LOG_LEVEL=info

# Module Toggles
MODULE_AUTH=true
MODULE_RATE_LIMITING=true
MODULE_CACHING=true
MODULE_JOBS=true
MODULE_FILE_UPLOAD=true
MODULE_LOGGING=true
MODULE_MONITORING=true
MODULE_AI_HELPERS=true
MODULE_AUDIT=true

